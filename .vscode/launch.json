    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "App",
            "request": "launch",
            "mainClass": "ui/ui.App",
            "projectName": "ui"
        },
        {
            "type": "java",
            "name": "App",
            "request": "launch",
            "mainClass": "ui/ui.App",
            "projectName": "loft"
        },
        {
            "type": "java",
            "name": "Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "loft App",
            "request": "launch",
            "mainClass": "ui/ui.App",
            "vmArgs": [
                "--add-opens",
                "core/core=ALL-UNNAMED",
                "--add-opens",
                "ui/ui=ALL-UNNAMED",
                "--add-exports",
                "javafx.graphics/com.sun.javafx.application=ALL-UNNAMED"
            ],
            "projectName": "loft"
        }
    ]
}

{
    "java.configuration.updateBuildConfiguration": "automatic",
    "[java]": {
        "editor.tabSize": 4
    },
    "java.test.config": [
        {
            "name": "loft testing",
            "vmArgs": [
                "--add-opens",
                "core/core=ALL-UNNAMED",
                "--add-opens",
                "ui/ui=ALL-UNNAMED",
                "--add-exports",
                "javafx.graphics/com.sun.javafx.application=ALL-UNNAMED"
            ]
        }
    ],
    "java.compile.nullAnalysis.mode": "automatic",
    "java.debug.settings.onBuildFailureProceed": true,
    "java.checkstyle.configuration": "${workspaceFolder}\\loft\\config\\checkstyle\\checkstyle-checker.xml",
    "java.checkstyle.version": "10.3.4",
    "yaml.customTags": [
        "!reference sequence", // To not be screamed at using gitlab custom yml syntax "!reference [.get_percentage, script]"
    ]
}
